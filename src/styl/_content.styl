.content
  flex: 1
  margin-left: 1em
  h2
    display: flex
    justify-content: space-between
    text-align: center
    color: $blue
    .title
      margin: 0 1em
      font-weight: 700
    .line
      flex: 1
      align-self: center
      border-top: 2px solid $darkgray
  .schools
    ul
      display: flex
      flex-wrap: wrap
      margin-top: 1em
      justify-content: center
      a.school
        width: 219px
        height: 173px
        position: relative
        margin-bottom: 1em
        margin-right: 1em
        h3
          text-align: center
          position: absolute
          bottom: 0
          width: 100%
          background-color: $orange
          color: #fff
      

